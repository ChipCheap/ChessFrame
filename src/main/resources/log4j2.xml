<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_ERR">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>

        <File name="Server" fileName="ChessFrame/logs/server/${date:yy-MM-dd}/${date:HH-mm-ss}.log">
            <PatternLayout>
                <Pattern>%d %-5p [%t] %C{2} (%F:%L) - %m%n</Pattern>
            </PatternLayout>
        </File>

        <File name="Client" fileName="ChessFrame/logs/client/${date:yy-MM-dd}/${date:HH-mm-ss}.log">
            <PatternLayout>
                <Pattern>%d %-5p [%t] %C{2} (%F:%L) - %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="settlersofcatan.server" level="warn">
            <AppenderRef ref="Server"/>
        </Logger>
        <Logger name="settlersofcatan.client" level="warn">
            <AppenderRef ref="Client"/>
        </Logger>
        <Root level="warning">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>